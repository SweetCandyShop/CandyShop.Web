@model IEnumerable<CandyShop.Core.Models.User>
@inject UserManager<CandyShop.Core.Models.User> userManager


<a asp-action="Create">Create user</a>

<table class="table">
    <tr><th>Id</th><th>Email</th><th>Role</th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.Email</td>

            @{ var roles = await userManager.GetRolesAsync(user); }


            <td>@roles.First()</td>
            <td>
                <form asp-action="Delete" asp-route-userId="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>